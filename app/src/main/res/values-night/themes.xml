        <!-- Customize your theme here. -->
        <style name="day_theme_main" >
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:orientation">vertical</item>
            <item name="android:background">@color/YPBlack</item>
            <item name="android:paddingHorizontal">@dimen/radius</item>
        </style>

        <style name="button_main_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">@dimen/size_0</item>
            <item name="android:layout_weight">1</item>
            <item name="android:backgroundTint">@color/white</item>
            <item name="android:insetTop">@dimen/size_0</item>
            <item name="android:insetBottom">@dimen/size_0</item>
            <item name="android:textAllCaps">false</item>
            <item name="android:textColor">@color/YPBlack</item>
            <item name="android:textSize">@dimen/size_22sp</item>
            <item name="cornerRadius">@dimen/radius</item>
            <item name="iconGravity">textStart</item>
            <item name="android:fontFamily">@font/ys_display_medium</item>
            <item name="android:textFontWeight">500</item>
            <item name="iconPadding">@dimen/padding_8</item>
            <item name="iconTint">@color/YPBlack</item>

        </style>

        <style name="text_settings" >
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginStart">@dimen/radius</item>
            <item name="android:textSize">@dimen/radius</item>
            <item name="android:paddingVertical">@dimen/size_21</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:fontFamily">@font/ys_display_regular</item>
            <item name="android:textFontWeight">400</item>

        </style>

        <style name="image_icon_settings" >
            <item name="android:layout_width">@dimen/size_24</item>
            <item name="android:layout_height">@dimen/size_24</item>
            <item name="android:layout_gravity">end</item>
            <item name="android:layout_marginTop">@dimen/size_19</item>
            <item name="android:layout_marginEnd">@dimen/size_12</item>
            <item name="android:layout_marginBottom">@dimen/size_18</item>
            <item name="iconTint">@color/YPBlack</item>
            <item name="android:src">@drawable/acsept_night</item>
        </style>

    <style name="day_theme_settings" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/YPBlack</item>

    </style>
    <style name="color_icon" >
        <item name="android:fillColor">@color/white</item>
    </style>
    <style name="color_text" >
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="color_search" >
        <item name="android:fillColor">@color/white</item>
    </style>

    <style name="switch_settings" >
        <item name="android:thumbTint">@color/Blue</item>
        <item name="android:trackTint">@color/YP_Blue_light</item>
    </style>

    <style name="light_mode" >
        <item name="android:src">@drawable/light_mode_night</item>
        <item name="android:layout_width">@dimen/size_24</item>
        <item name="android:layout_height">@dimen/size_24</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/size_19</item>
        <item name="android:layout_marginEnd">@dimen/size_12</item>
        <item name="android:layout_marginBottom">@dimen/size_18</item>
    </style>

    <style name="group" >
        <item name="android:src">@drawable/group_night</item>
        <item name="android:layout_width">@dimen/size_24</item>
        <item name="android:layout_height">@dimen/size_24</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/size_19</item>
        <item name="android:layout_marginEnd">@dimen/size_12</item>
        <item name="android:layout_marginBottom">@dimen/size_18</item>
    </style>

    <style name="back_maim">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:padding">@dimen/size_12</item>
        <item name="android:src">@drawable/dark_mode_night</item>

    </style>
    <style name="edit_search" >
        <item name="android:background">@drawable/edit_text_background_night</item>
        <item name="android:drawableLeft">@drawable/search_icon_night</item>
        <item name="android:textColor">@color/YPBlack</item>
        <item name="android:textColorHint">@color/YPBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/radius</item>
        <item name="android:layout_marginEnd">@dimen/radius</item>
        <item name="android:drawablePadding">@dimen/size_10</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingVertical">@dimen/padding_8</item>
        <item name="android:paddingStart">@dimen/size_12</item>
    </style>
    <style name="imageX">
        <item name="android:src">@drawable/x_icon_night</item>
    </style>

</resources>
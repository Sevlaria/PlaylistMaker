<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/day_theme_settings">

    <LinearLayout
        style="@style/day_theme_settings"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_main"
            style="@style/back_maim"

            />

        <TextView
            style="@style/color_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/ys_display_medium"
            android:paddingStart="@dimen/size_12"
            android:paddingTop="@dimen/size_10"
            android:paddingBottom="@dimen/size_12"
            android:text="@string/settings"
            android:textFontWeight="500"
            android:textSize="@dimen/size_22sp" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_24">

        <TextView

            style="@style/text_settings"
            android:text="@string/night_theme" />

        <Switch
            style="@style/switch_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginEnd="@dimen/size_6"
            android:layout_marginBottom="@dimen/size_11"
            android:paddingStart="@dimen/size_9"
            android:paddingTop="@dimen/size_11"
            android:paddingEnd="@dimen/size_0"
            android:paddingBottom="@dimen/size_11"
           />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/text_settings"
            android:text="@string/give" />

        <ImageView
            android:id="@+id/image_settings"
            android:layout_height="wrap_content"
            style="@style/light_mode" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/text_settings"
            android:text="@string/group" />

        <ImageView
            android:id="@+id/write"
            style="@style/group"

            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/text_settings"
            android:text="@string/acsept" />

        <ImageView
            android:id="@+id/oferta"
            style="@style/image_icon_settings"
             />
    </FrameLayout>


</LinearLayout>
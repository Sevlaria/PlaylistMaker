<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:id="@+id/back_main"
            android:src="@drawable/search"
            android:padding="@dimen/size_12"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingTop="@dimen/size_10"
            android:paddingBottom="@dimen/size_12"
            android:paddingStart="@dimen/size_12"
            android:text="@string/settings"
            android:textColor="@color/YPBlack"
            android:textSize="@dimen/size_22sp"
            android:typeface="normal" />


    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_24">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/radius"
            android:text="@string/night_theme"
            android:textSize="@dimen/radius"
            android:typeface="normal"
            android:paddingVertical="@dimen/size_21"
            android:textColor="@color/black"
            />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginEnd="@dimen/size_6"
            android:layout_marginBottom="@dimen/size_11"
            android:paddingTop="@dimen/size_11"
            android:paddingBottom="@dimen/size_11"
            android:paddingStart="@dimen/size_9"
            android:paddingEnd="@dimen/size_0"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/give"
            android:textSize="@dimen/radius"
            android:typeface="normal"
            android:paddingVertical="@dimen/size_21"
            android:layout_marginStart="@dimen/radius"
            android:textColor="@color/black"
            />

        <ImageView
            android:layout_width="@dimen/size_24"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/size_19"
            android:layout_marginEnd="@dimen/size_12"
            android:layout_marginBottom="@dimen/size_18"
            android:src="@drawable/light_mode"

            />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group"
            android:textSize="@dimen/radius"
            android:typeface="normal"
            android:paddingVertical="@dimen/size_21"
            android:layout_marginStart="@dimen/radius"
            android:textColor="@color/black"
            />

        <ImageView
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/size_12"
            android:src="@drawable/group"
            android:layout_marginTop="@dimen/size_19"
            android:layout_marginBottom="@dimen/size_19"

            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/acsept"
            android:textSize="@dimen/radius"
            android:typeface="normal"
            android:paddingVertical="@dimen/size_21"
            android:layout_marginStart="@dimen/radius"
            android:textColor="@color/black"
            />

        <ImageView
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/size_12"
            android:src="@drawable/acsept"
            android:layout_marginTop="@dimen/size_19"
            android:layout_marginBottom="@dimen/size_18"

            />
    </FrameLayout>


</LinearLayout>
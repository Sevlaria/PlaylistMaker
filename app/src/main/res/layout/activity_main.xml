<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:paddingHorizontal="@dimen/size_0">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name_list"
        android:layout_gravity="start"
        android:paddingStart="@dimen/size_12"
        android:paddingTop="@dimen/size_10"
        android:paddingBottom="@dimen/size_12"
        android:layout_marginVertical="@dimen/size_0"
        android:paddingEnd="62dp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/size_0"
        android:textSize="@dimen/size_22sp"
        android:layout_marginBottom="@dimen/radius"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background"
        android:paddingHorizontal="@dimen/radius"
       >

        <Button
            android:id="@+id/button_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="@dimen/padding_8"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:insetTop="@dimen/size_0"
            android:insetBottom="@dimen/size_0"
            android:text="@string/search"
            android:textAllCaps="false"
            android:textColor="@color/YPBlack"
            android:textSize="@dimen/size_22sp"
            app:cornerRadius="@dimen/radius"
            app:icon="@drawable/button_search"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/size_0"
            app:iconTint="@color/YPBlack" />

        <Button
            android:id="@+id/button_media"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0"
            android:layout_marginVertical="@dimen/padding_8"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:insetTop="@dimen/size_0"
            android:insetBottom="@dimen/size_0"
            android:text="@string/media"
            android:textAllCaps="false"
            android:textColor="@color/YPBlack"
            android:textSize="@dimen/size_22sp"
            app:cornerRadius="@dimen/radius"
            app:icon="@drawable/media_music"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/size_0"
            app:iconTint="@color/YPBlack" />

        <Button
            android:id="@+id/button_settings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0"
            android:layout_marginTop="@dimen/padding_8"
            android:layout_marginBottom="28dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:insetTop="@dimen/size_0"
            android:insetBottom="@dimen/size_0"
            android:text="@string/settings"
            android:textAllCaps="false"
            android:textColor="@color/YPBlack"
            android:textSize="@dimen/size_22sp"
            app:cornerRadius="@dimen/radius"
            app:icon="@drawable/set"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/size_0"
            app:iconTint="@color/YPBlack" />

    </LinearLayout>

</LinearLayout>
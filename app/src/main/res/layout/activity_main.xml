<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/day_theme_main">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginVertical="@dimen/size_0"
        android:layout_marginTop="@dimen/size_0"
        android:layout_marginBottom="@dimen/radius"
        android:fontFamily="@font/ys_display_medium"
        android:paddingStart="@dimen/size_12"
        android:paddingTop="@dimen/size_10"
        android:paddingEnd="62dp"
        android:paddingBottom="@dimen/size_12"
        android:text="@string/name_list"
        android:textColor="@color/white"
        android:textFontWeight="500"
        android:textSize="@dimen/size_22sp" />

    <LinearLayout
        style="@style/day_theme_main"
        android:paddingHorizontal="@dimen/radius">

        <Button
            android:id="@+id/button_search"
            style="@style/button_main_style"
            android:layout_marginTop="@dimen/size_28"
            android:layout_marginBottom="@dimen/padding_8"
            android:text="@string/search"
            app:icon="@drawable/button_search" />

        <Button
            android:id="@+id/button_media"
            style="@style/button_main_style"
            android:layout_marginVertical="@dimen/padding_8"
            android:text="@string/media"
            app:icon="@drawable/media_music" />

        <Button
            android:id="@+id/button_settings"

            style="@style/button_main_style"
            android:layout_marginTop="@dimen/padding_8"
            android:layout_marginBottom="@dimen/size_28"
            android:text="@string/settings"
            app:icon="@drawable/set" />

    </LinearLayout>

</LinearLayout>
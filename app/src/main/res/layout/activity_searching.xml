<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<FrameLayout
    android:id="@+id/frame_background"
    style="@style/day_theme_settings">
    <LinearLayout
        style="@style/day_theme_settings"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_main2"
            style="@style/back_maim"

            />

        <TextView
            style="@style/color_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/ys_display_medium"
            android:paddingStart="@dimen/size_12"
            android:paddingTop="@dimen/size_10"
            android:paddingBottom="@dimen/size_12"
            android:paddingEnd="@dimen/size_12"
            android:text="@string/search"
            android:textFontWeight="500"
            android:textSize="@dimen/size_22sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_50"
        android:paddingVertical="@dimen/padding_8" >

        <EditText
            android:id="@+id/input_search"
            style="@style/edit_search"
            tools:ignore="TouchTargetSizeCheck"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <ImageView
            android:id="@+id/button_x"
            style="@style/imageX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/radius"
            android:paddingHorizontal="@dimen/padding_8"
            android:paddingVertical="@dimen/padding_8"
            android:visibility="visible"
            />
    </FrameLayout>
</FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/size_68">

            <ImageView
                android:id="@+id/placeholder"
                android:layout_width="@dimen/size_120"
                android:layout_height="@dimen/size_120"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_102" />

            <TextView
                android:id="@+id/placeholder_text"
                style="@style/zaglushka_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_24"
                android:layout_marginTop="@dimen/size_16" />

            <Button
            android:id="@+id/button_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_24"
            android:text="@string/update"
            style="@style/button_search"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
       >

        <TextView
            android:id="@+id/text_history_searching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size_16"
            android:text="@string/your_search"
            style="@style/zaglushka_text"
            android:layout_gravity="center_horizontal"
            android:paddingHorizontal="@dimen/size_16"
            android:paddingTop="@dimen/size_18"
            android:paddingBottom="@dimen/size_12"
            android:layout_marginTop="@dimen/size_24"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_history"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/padding_8"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <Button
            android:id="@+id/clear_searching"
            style="@style/button_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_24"
            android:gravity="center_horizontal"
            android:text="@string/clear_search"
            android:visibility="gone" />
    </LinearLayout>
    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_120"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </FrameLayout>
















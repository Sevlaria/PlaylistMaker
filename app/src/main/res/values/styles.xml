<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!--<item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item> -->
        <!-- Secondary brand color. -->
        <!-- <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item> -->
        <!-- Status bar color. -->
        <!--  <item name="android:statusBarColor">?attr/colorPrimaryVariant</item> -->
        <!-- Customize your theme here. -->
    </style>

    <style name="color_text" parent="@style/Theme.PlaylistMaker">
        <item name="android:textColor">@color/YPBlack</item>
    </style>
    <style name="color_search" parent="Theme.PlaylistMaker">
        <item name="android:fillColor">@color/black_my</item>
    </style>

    <style name="switch_settings" parent="Theme.PlaylistMaker">
        <item name="android:thumbTint">@color/Text_grey</item>
        <item name="android:trackTint">@color/Light_grey</item>
    </style>



    <style name="button_main_style" parent="@style/Theme.PlaylistMaker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetTop">@dimen/size_0</item>
        <item name="android:insetBottom">@dimen/size_0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YPBlack</item>
        <item name="android:textSize">@dimen/size_22sp</item>
        <item name="cornerRadius">@dimen/radius</item>
        <item name="iconGravity">textStart</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconPadding">@dimen/padding_8</item>
        <item name="iconTint">@color/YPBlack</item>

    </style>

    <style name="text_settings" parent="@style/Theme.PlaylistMaker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/radius</item>
        <item name="android:textSize">@dimen/radius</item>
        <item name="android:paddingVertical">@dimen/size_21</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>

    </style>

    <style name="image_icon_settings" parent="@style/Theme.PlaylistMaker">
        <item name="android:layout_width">@dimen/size_24</item>
        <item name="android:layout_height">@dimen/size_24</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/size_19</item>
        <item name="android:layout_marginEnd">@dimen/size_12</item>
        <item name="android:layout_marginBottom">@dimen/size_18</item>
        <item name="android:src">@drawable/acsept</item>
    </style>

    <style name="day_theme_main" parent="@style/Theme.PlaylistMaker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background</item>
        <item name="android:paddingHorizontal">@dimen/size_0</item>
    </style>

    <style name="day_theme_settings" parent="@style/Theme.PlaylistMaker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>

    </style>
    <style name="light_mode" parent="@style/Theme.PlaylistMaker">
        <item name="android:src">@drawable/light_mode</item>
        <item name="android:layout_width">@dimen/size_24</item>
        <item name="android:layout_height">@dimen/size_24</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/size_19</item>
        <item name="android:layout_marginEnd">@dimen/size_12</item>
        <item name="android:layout_marginBottom">@dimen/size_18</item>
    </style>

    <style name="group" parent="@style/Theme.PlaylistMaker">
        <item name="android:src">@drawable/group</item>
        <item name="android:layout_width">@dimen/size_24</item>
        <item name="android:layout_height">@dimen/size_24</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/size_19</item>
        <item name="android:layout_marginEnd">@dimen/size_12</item>
        <item name="android:layout_marginBottom">@dimen/size_18</item>
    </style>

    <style name="back_maim">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:padding">@dimen/size_12</item>
        <item name="android:src">@drawable/search</item>

    </style>

    <style name="edit_search" parent="Theme.PlaylistMaker">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:drawableLeft">@drawable/search_icon</item>
        <item name="android:textColor">@color/YPBlack</item>
        <item name="android:textColorHint">@color/Text_grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="imageX" >
        <item name="android:src">@drawable/x_icon</item>
    </style>

</resources>